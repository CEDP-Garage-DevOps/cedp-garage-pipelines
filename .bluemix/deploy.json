{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"messages": {
		"$i18n": "locales.yml"
	},
	"title": {
		"$ref": "#/messages/deploy.title"
	},
	"description": {
		"$ref": "#/messages/deploy.description"
	},
	"longDescription": {
		"$ref": "#/messages/deploy.longDescription"
	},
	"type": "object",
	"properties": {
		"api-key": {
			"description": {
				"$ref": "#/messages/deploy.apikeyDescription"
			},
			"type": "string",
			"pattern": "\\S"
		},
		"prod-region": {
			"description": {
				"$ref": "#/messages/deploy.regionDescription"
			},
			"type": "string",
			"disabled": false
		},
		"registry-region": {
			"type": "string",
			"disabled": false
		},
		"func-user": {
			"type": "string",
			"disabled": false
		},
		"func-pass": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"af-psw": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"sonar-devop-token": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"cluster": {
			"type": "string",
			"disabled": false
		},
		"domain": {
			"type": "string",
			"disabled": false
		},
		"externalIP": {
			"type": "string",
			"disabled": false
		},

		"dockerImageName": {
			"type": "string",
			"disabled": false
		},
		"INPUT_GIT_BRANCH": {
			"type": "string",
			"disabled": false
		}
	
	},
	"required": ["api-key", "prod-region"],
	"form": [{
			"type": "validator",
			"url": "/devops/setup/bm-helper/custom_helper.html"
		}, {
			"type": "password",
			"readonly": false,
			"title": {
				"$ref": "#/messages/deploy.apikey"
			},
			"key": "api-key"
		}, {
			"type": "table",
			"columnCount": 3,
			"widths": ["45%", "10%", "45%"],
			"items": [{
					"type": "label",
					"title": "Git Input Branch"
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "label",
					"title": "Pipeline Image"
				},  {
					"type": "text",
					"key": "INPUT_GIT_BRANCH",
					"readonly": false
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "text",
					"key": "dockerImageName",
					"readonly": false
				}
			]
		}, {
			"type": "table",
			"columnCount": 3,
			"widths": ["45%", "10%", "45%"],
			"items": [{
					"type": "label",
					"title": "Function UserName"
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "label",
					"title": "Function Password"
				},  {
					"type": "text",
					"key": "func-user",
					"readonly": false
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "password",
					"key": "func-pass",
					"readonly": false
				}
			]
		}, {
			"type": "table",
			"columnCount": 3,
			"widths": ["45%", "10%", "45%"],
			"items": [{
					"type": "label",
					"title": ""
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "label",
					"title": ""
				},{
					"type": "label",
					"title": "Region"
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "label",
					"title": "Kubernetes Cluster"
				}, {
					"type": "select",
					"key": "prod-region"
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "text",
					"key": "cluster",
					"readonly": false
				},   {
					"type": "label",
					"title": "Ingress subdomain"
				},  {
					"type": "label",
					"title": ""
				},  {
					"type": "label",
					"title": "Ingress PublicIP"
				}, {
					"type": "text",
					"key": "domain",
					"readonly": false
				},  {
					"type": "label",
					"title": ""
				}, {
					"type": "text",
					"key": "externalIP",
					"readonly": false
				}
			]
		}, {
			"type": "table",
			"columnCount": 3,
			"widths": ["45%", "10%", "45%"],
			"items": [{
					"type": "label",
					"title": "Sonar DevOps Token"
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "label",
					"title": "AF Password"
				},  {
					"type": "password",
					"key": "sonar-devop-token",
					"readonly": false
				}, {
					"type": "label",
					"title": ""
				}, {
					"type": "password",
					"key": "af-psw",
					"readonly": false
				}
			]
		}, {
			"type": "table",
			"columnCount": 1,
			"widths": ["100%"],
			"items": [{
					"type": "label",
					"title": {
						"$ref": "#/messages/deploy.clusterDescription"
					}
				}
			]
		}, {
			"type": "table",
			"columnCount": 1,
			"widths": ["100%"],
			"items": [{
					"type": "label",
					"title": {
						"$ref": "#/messages/deploy.clusternsDescription"
					}
				}
			]
		}
	]
}